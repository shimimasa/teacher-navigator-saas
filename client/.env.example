# ==================================
# React アプリケーション設定
# ==================================

# 注意: Create React Appでは、環境変数は REACT_APP_ で始まる必要があります
# 参考: https://create-react-app.dev/docs/adding-custom-environment-variables/

# ==================================
# API設定
# ==================================

# バックエンドAPIのベースURL
# 開発環境: http://localhost:5000
# 本番環境: https://api.yourdomain.com
REACT_APP_API_URL=http://localhost:5000

# APIタイムアウト（ミリ秒）
REACT_APP_API_TIMEOUT=30000

# ==================================
# アプリケーション設定
# ==================================

# アプリケーション名
REACT_APP_NAME=教員ナビゲーター診断SaaS

# アプリケーションバージョン
REACT_APP_VERSION=1.0.0

# 環境名（development | staging | production）
REACT_APP_ENV=development

# ==================================
# 機能フラグ
# ==================================

# ソーシャルログイン機能の有効化
REACT_APP_ENABLE_SOCIAL_LOGIN=false

# 多言語対応の有効化
REACT_APP_ENABLE_I18N=false

# アナリティクス機能の有効化
REACT_APP_ENABLE_ANALYTICS=true

# デバッグモードの有効化（開発環境のみ）
REACT_APP_DEBUG_MODE=true

# ==================================
# 外部サービス設定
# ==================================

# Google Analytics測定ID（例: G-XXXXXXXXXX）
REACT_APP_GA_MEASUREMENT_ID=

# Google OAuth クライアントID（ソーシャルログイン用）
REACT_APP_GOOGLE_CLIENT_ID=

# Microsoft OAuth クライアントID（ソーシャルログイン用）
REACT_APP_MICROSOFT_CLIENT_ID=

# Sentry DSN（エラー監視用）
REACT_APP_SENTRY_DSN=

# ==================================
# UI/UX設定
# ==================================

# デフォルトテーマ（light | dark）
REACT_APP_DEFAULT_THEME=light

# ページあたりの表示件数
REACT_APP_PAGE_SIZE=20

# 無限スクロールの閾値（ピクセル）
REACT_APP_INFINITE_SCROLL_THRESHOLD=100

# ==================================
# セキュリティ設定
# ==================================

# CSPノンス（Content Security Policy用）
# 本番環境では適切に設定してください
REACT_APP_CSP_NONCE=

# セッションタイムアウト（分）
REACT_APP_SESSION_TIMEOUT=30

# ==================================
# 開発者向け設定
# ==================================

# モックAPIの使用（開発環境でバックエンドなしでテスト）
REACT_APP_USE_MOCK_API=false

# ログレベル（debug | info | warn | error）
REACT_APP_LOG_LEVEL=info

# パフォーマンス監視の有効化
REACT_APP_ENABLE_PERFORMANCE_MONITORING=false

# ==================================
# その他の設定
# ==================================

# デフォルト言語（ja | en）
REACT_APP_DEFAULT_LANGUAGE=ja

# タイムゾーン
REACT_APP_TIMEZONE=Asia/Tokyo

# 日付フォーマット
REACT_APP_DATE_FORMAT=YYYY/MM/DD

# 時刻フォーマット
REACT_APP_TIME_FORMAT=HH:mm:ss