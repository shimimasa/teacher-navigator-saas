# ==================================
# サーバー設定
# ==================================

# ポート番号（デフォルト: 5000）
PORT=5000

# 実行環境 (development | production | test)
NODE_ENV=development

# ==================================
# データベース設定
# ==================================

# MongoDB接続URI
# 例: mongodb://localhost:27017/teacher_navigator
# 本番環境: mongodb+srv://username:password@cluster.mongodb.net/dbname
MONGODB_URI=mongodb://localhost:27017/teacher_navigator

# ==================================
# 認証設定
# ==================================

# JWT署名用シークレットキー
# 重要: 本番環境では必ず強力なランダム文字列に変更してください
# 生成例: openssl rand -base64 32
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# JWTトークン有効期限（例: 30d, 24h, 60m）
JWT_EXPIRE=30d

# ==================================
# メール設定（オプション）
# ==================================

# 送信元メールアドレス
EMAIL_FROM=noreply@example.com

# メールサービスプロバイダー (gmail | sendgrid | smtp)
EMAIL_SERVICE=gmail

# Gmailを使用する場合
EMAIL_USER=your-email@gmail.com
# アプリパスワードを使用（2段階認証必須）
# https://support.google.com/accounts/answer/185833
EMAIL_PASS=your-app-specific-password

# SendGridを使用する場合
# SENDGRID_API_KEY=your-sendgrid-api-key

# カスタムSMTPを使用する場合
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_SECURE=false
# SMTP_USER=smtp-username
# SMTP_PASS=smtp-password

# ==================================
# セキュリティ設定
# ==================================

# CORS許可オリジン（カンマ区切りで複数指定可）
# 開発環境: http://localhost:3000
# 本番環境: https://yourdomain.com
CORS_ORIGIN=http://localhost:3000

# レート制限設定（1IPあたりの制限）
# API一般: 15分あたりのリクエスト数
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ==================================
# ファイルアップロード設定
# ==================================

# アップロードディレクトリ（相対パスまたは絶対パス）
UPLOAD_DIR=uploads

# 最大ファイルサイズ（バイト単位）
# 5MB = 5 * 1024 * 1024 = 5242880
MAX_FILE_SIZE=5242880

# ==================================
# セッション設定
# ==================================

# Redisを使用する場合（オプション）
# REDIS_URL=redis://localhost:6379
# SESSION_SECRET=your-session-secret

# ==================================
# ログ設定
# ==================================

# ログレベル (error | warn | info | debug)
LOG_LEVEL=info

# ログファイル保存先
LOG_DIR=logs

# ==================================
# 外部サービス設定（オプション）
# ==================================

# Google OAuth（ソーシャルログイン用）
# GOOGLE_CLIENT_ID=your-google-client-id
# GOOGLE_CLIENT_SECRET=your-google-client-secret

# Microsoft OAuth（ソーシャルログイン用）
# MICROSOFT_CLIENT_ID=your-microsoft-client-id
# MICROSOFT_CLIENT_SECRET=your-microsoft-client-secret

# Sentryエラー監視
# SENTRY_DSN=your-sentry-dsn

# ==================================
# その他の設定
# ==================================

# タイムゾーン
TZ=Asia/Tokyo

# バックアップ設定
# BACKUP_ENABLED=true
# BACKUP_SCHEDULE=0 2 * * *
# BACKUP_RETENTION_DAYS=30